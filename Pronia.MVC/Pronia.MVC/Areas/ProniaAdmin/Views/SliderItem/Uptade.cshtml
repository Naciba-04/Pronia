@model SliderItem

<div class="col-lg-12 grid-margin stretch-card">

    <div class="card-body">
        <div class="card-body">
            <h4 class="card-title">Create Slider Item</h4>
            <p class="card-description"></p>
            <form method="post" enctype="multipart/form-data" class="forms-sample">
                <div class="form-group">
                    <label for="exampeInputTitle">Title</label>
                    <input asp-for="Title" type="text" class="form-control" id="exampleInputTitle" placeholder="Title">
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label for="exampeInputShortDescription">Title</label>
                    <input asp-for="ShortDescription" type="text" class="form-control" id="exampleShortDescription" placeholder="ShortDescription">
                    <span class="text-danger" asp-validation-for="ShortDescription"></span>
                </div>
                <div class="form-group">
                    <label for="exampeInputOffer">Offer</label>
                    <input asp-for="Offer" type="text" class="form-control" id="exampleInputOffer" placeholder="Offer">
                    <span class="text-danger" asp-validation-for="Offer"></span>
                </div>
                <div class="form-group">
                    <label for="exampeInputImpPath">ImpPath</label>
                    <input asp-for="ImgPath" type="text" class="form-control" id="exampleInputImgPath" placeholder="ImgPath">
                    <span class="text-danger" asp-validation-for="ImgPath"></span>
                </div>

                <a class="btn btn-light" asp-controller="SliderItem" asp-action="Index">Cancel</a>
                <button type="submit" class="btn btn-warning" style="color:white">Update</button>
            </form>
        </div>
    </div>
</div>

