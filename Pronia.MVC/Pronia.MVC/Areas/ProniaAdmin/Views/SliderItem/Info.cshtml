
@model SliderItem



<div class="content-wrapper">
    <div class="row">

        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Slider Item Info Table</h4>
                    <p class="card-description">
                        <a asp-action="Index">Go back</a>
                        <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning" style="color:white">Update</a>
                        <a asp-action="Remove" asp-route-id="@Model.Id" class="btn btn-danger" style="color:white">Remove</a>
                    </p>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        #
                                    </th>
                                    <th>
                                        Img
                                    </th>
                                    <th>
                                        Title
                                    </th>
                                    <th>
                                        Short Description
                                    </th>
                                    <th>
                                        Offer
                                    </th>
                                    <th>
                                        Created Date
                                    </th>
                                    <th>
                                        Last Modified Date
                                    </th>
                                    <th>
                                        Deleted Date
                                    </th>
                                    <th>
                                        Is Deleted
                                    </th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                               
                                
                                    <tr>
                                        <td>@Model.Id</td>
                                        <td class="py-1">
                                            <img src="~/assets/images/website-images//1-1-524x617.png" alt="image" />
                                        </td>
                                        <td>
                                            @Model.Title
                                        </td>
                                        <td>
                                            @Model.ShortDescription
                                        </td>
                                        <td>
                                            @Model.Offer%
                                        </td>
                                        <td>
                                            @Model.CreatedDate
                                        </td>
                                        <td>
                                            @Model.LastModifiedDate
                                        </td>
                                        <td>
                                            @Model.DeletedDate
                                        </td>
                                        <td>
                                            @Model.IsDeleted
                                        </td>
                                        
                                    </tr>
                                

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>



